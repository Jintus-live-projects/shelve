// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Food {
    id Int @default(autoincrement()) @id
    looseStock LooseStock[]
    storedStock StoredStock[]
    name String
    barcode String? @unique
}

model Location {
    id Int @default(autoincrement()) @id
    name String
    temperature Float?
    looseStocks LooseStock[]
    storedStocks StoredStock[]
}

model LooseStock {
    id Int @default(autoincrement()) @id
    food Food @relation(fields: [foodId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    foodId Int @unique
    location Location @relation(fields: [locationId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    locationId Int @unique
    filledQuantity Float
    fillingPoucentage Float
    customBarcodes CustomBarcode[]
}

model StoredStock {
    id Int @default(autoincrement()) @id
    food Food @relation(fields: [foodId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    foodId Int @unique
    location Location @relation(fields: [locationId], references: [id], onUpdate: Cascade, onDelete: Cascade)
    locationId Int @unique
    quantity Float
    bestBeforeDate DateTime
}

model CustomBarcode {
    id Int @default(autoincrement()) @id
    barcode String @unique
    color String @unique
    looseStock LooseStock? @relation(fields: [looseStockId], references: [id], onUpdate: Cascade, onDelete: SetNull)
    looseStockId Int?
}
